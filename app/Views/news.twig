{% for article in news %}
    <div class="article">
        <div class="article-title">
            {{ article.title }}
        </div>
        <div class="article-author">
            {% if article.author  %}
            Author: <span id="article-author">{{ article.author }}</span>
            {% endif %}
        </div>
        <div class="article-image">
            <img id="article-image" src="{{ article.urlToImage }}" alt="No image">
        </div>
        <div class="article-description">
            <hr>
            {{ article.description }}
            <a href="{{ article.url }}" target="_blank" >Read</a>
        </div>
    </div>
    <div class="divider div-transparent div-dot"></div>
{% endfor %}
